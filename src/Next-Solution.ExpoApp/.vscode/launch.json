{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Expo",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "expo",
        "start"
      ],
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal",
      "stopOnEntry": true
    },
    {
      "name": "Start Expo (Android)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "expo",
        "start",
        "--android"
      ],
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal",
      "stopOnEntry": true
    },
    {
      "name": "Start Expo (iOS)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "expo",
        "start",
        "--ios"
      ],
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal",
      "stopOnEntry": true
    }
  ]
}
